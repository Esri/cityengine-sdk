include(${CMAKE_CURRENT_LIST_DIR}/prt4maya_codecTargets.cmake)

set(PRT4MAYA_CODEC_PROJECT prt4maya_codec)
find_path(PRT4MAYA_CODEC_INSTALL_PATH NAMES "cmake/${PRT4MAYA_CODEC_PROJECT}Config.cmake" PATHS ${CMAKE_CURRENT_LIST_DIR}/..)

set(PRT4MAYA_CODEC_INCLUDE_PATH ${PRT4MAYA_CODEC_INSTALL_PATH}/include)

if(WIN32)
	set(LIBSUF ${CMAKE_IMPORT_LIBRARY_SUFFIX})
else()
	set(LIBSUF ${CMAKE_SHARED_LIBRARY_SUFFIX})
endif()

find_library(
	PRT4MAYA_CODEC_LINK_LIBRARY
	NAMES ${CMAKE_SHARED_LIBRARY_PREFIX}${PRT4MAYA_CODEC_PROJECT}${LIBSUF}
	PATHS ${PRT4MAYA_CODEC_INSTALL_PATH}/lib
)

set(PRT4MAYA_CODEC_EXT_LIBRARIES)
list(APPEND PRT4MAYA_CODEC_EXT_LIBRARIES "${PRT4MAYA_CODEC_INSTALL_PATH}/lib/${CMAKE_SHARED_LIBRARY_PREFIX}${PRT4MAYA_CODEC_PROJECT}${CMAKE_SHARED_LIBRARY_SUFFIX}")

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(${PRT4MAYA_CODEC_PROJECT} DEFAULT_MSG PRT4MAYA_CODEC_LINK_LIBRARY PRT4MAYA_CODEC_INCLUDE_PATH)
